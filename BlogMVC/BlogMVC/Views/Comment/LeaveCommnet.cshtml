@model EntityLayer.Concrete.Comment

<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Yap</h3>
    @using (Html.BeginForm("BlogDetails", "Blog", new { id = ViewBag.id }, FormMethod.Post))
    {
    <form method="post" class="p-5 bg-light" id="formCommnet">
        <input type="hidden" class="form-control" name="BlogId" value="@ViewBag.Id">
        <div class="form-group">
            <label for="name">Kullanıcı Adı</label>
            <input type="text" class="form-control" name="UserName" required>
            @Html.ValidationMessageFor(x => x.UserName)
        </div>
        <div class="form-group">
            <label for="email">Mail</label>
            <input type="email" class="form-control" name="Mail" required>
            @Html.ValidationMessageFor(x => x.Mail)
        </div>
        <div class="form-group">
            <label for="message">Yorum</label>
            <textarea name="CommentText" cols="30" rows="10" class="form-control" required></textarea>
            @Html.ValidationMessageFor(x => x.CommentText)
        </div>
        <div class="form-group">
            <label for="message">Puanınız: </label>
            <label>@Html.RadioButton("CommentRating", 1) 1</label>
            <label>@Html.RadioButton("CommentRating", 2) 2</label>
            <label>@Html.RadioButton("CommentRating", 3) 3</label>
            <label>@Html.RadioButton("CommentRating", 4) 4</label>
            <label>@Html.RadioButton("CommentRating", 5) 5</label>
            <label>@Html.RadioButton("CommentRating", 6) 6</label>
            <label>@Html.RadioButton("CommentRating", 7) 7</label>
            <label>@Html.RadioButton("CommentRating", 8) 8</label>
            <label>@Html.RadioButton("CommentRating", 9) 9</label>
            <label>@Html.RadioButton("CommentRating", 10) 10</label>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Yorum Yap</button>
        </div>

    </form>
    }
</div>
    


<script>
    if (window.history.replaceState) {
        window.history.replaceState(null, null, window.location.href);
    }

</script>
