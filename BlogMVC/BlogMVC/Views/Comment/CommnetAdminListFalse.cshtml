
@{
    ViewBag.Title = "CommnetAdminListFalse";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<EntityLayer.Concrete.Comment>


@{
    ViewBag.Title = "CommnetAdminList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">



    <section class="content">

        <div class="container-fluid">

            <div class="row">

                <div class="card-body">


                    @foreach (var x in Model)
                    {
                        <div class="post">

                            <div class="user-block">

                                <img class="img-circle img-bordered-sm" src="https://pic.onlinewebfonts.com/thumbnails/icons_401900.svg" alt="user image">

                                <span class="username">

                                    <a href="#">@x.UserName</a>
                                    <span>-@x.Blogs.BlogTitle</span>

                                    <a href="/Comment/CommnetAdminListCheck/@x.CommentId" class="float-right btn-tool"><i class="fa fa-check"></i></a>
                                </span>

                                <span class="description">@x.CommentTime.ToString("dd-MM-yyyy")</span>

                            </div>

                            <p>@x.CommentText</p>

                            <p>
                                @*<a href="#" class="link-black text-sm mr-2"><i class="fas fa-share mr-1"></i> Share</a>
                                    <a href="#" class="link-black text-sm"><i class="far fa-thumbs-up mr-1"></i> Like</a>*@
                            </p>
                        </div>
                    }

                </div>

            </div>

        </div>



    </section>

</body>

</html>



