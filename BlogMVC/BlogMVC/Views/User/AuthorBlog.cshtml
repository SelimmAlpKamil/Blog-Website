@model IEnumerable<EntityLayer.Concrete.Blog>

@{
    ViewBag.Title = "AuthorBlog";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

@{
    string color = " ";
    string durum = " ";

}



<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Projects</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>



                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                id

                            </th>

                            <th style="width: 20%">

                                Blog Başlık

                            </th>

                            <th style="width: 20%">

                                Kategori

                            </th>

                            <th>

                                Begenme Oranı

                            </th>

                            <th style="width: 10%" class="text-center">

                                Durum

                            </th>

                            <th style="width: 30%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var x in Model)
                        {
                            if (x.BlogRating>75 && x.BlogRating<=100)
                            {
                                color = "badge badge-success";
                                durum = "Mükenmel";
                            }
                            if (x.BlogRating > 50 && x.BlogRating <= 75)
                            {
                                color = "badge badge-info";
                                durum = "Başarılı";
                            }
                            if (x.BlogRating > 25 && x.BlogRating <= 50)
                            {
                                color = "badge badge-warning";
                                durum = "Orta";
                            }
                            if (x.BlogRating > 0 && x.BlogRating <= 25)
                            {
                                color = "badge badge-danger";
                                durum = "Zayıf";
                            }




                            <tr>

                                <td>

                                    @x.BlogId

                                </td>

                                <td>

                                    <a>

                                        @x.BlogTitle

                                    </a>

                                </td>

                                <td>

                                    <ul class="list-inline">

                                        <li class="list-inline-item">

                                           
                                            <span> @x.Category.CategoryName</span>

                                        </li>

                                    </ul>

                                </td>

                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="@x.BlogRating" aria-volumemin="0" aria-volumemax="10" style="width:@x.BlogRating%">

                                        </div>

                                    </div>

                                    <small>

                                       %@x.BlogRating

                                    </small>

                                </td>

                                <td class="project-state">

                                    <span class="@color">@durum</span>

                                </td>

                                <td class="project-actions text-right">

                                    <a class="btn btn-primary btn-sm" href="/Blog/BlogDetails/@x.BlogId">

                                        <i class="fas fa-folder">

                                        </i>

                                        Detaylar

                                    </a>

                                    <a class="btn btn-info btn-sm" href="/User/UpdateAuthorBlog/@x.BlogId">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="/User/DeleteAuthorBlog/@x.BlogId">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>

                                    <a class="btn btn-warning btn-sm" href="/User/AuthorBlogCommentDetail/@x.BlogId">

                                        <i class="fas fa-trash">

                                        </i>

                                        Yorumlar

                                    </a>

                                </td>

                            </tr>
                        }

                    </tbody>

                </table>

            </div>
            <br />
            <div style="margin-left:10px">
                <a href="/User/AddAuthorBlog/" class="btn btn-info">Yeni Blog Ekle</a>
            </div>
            <br />

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>

</body>

</html>