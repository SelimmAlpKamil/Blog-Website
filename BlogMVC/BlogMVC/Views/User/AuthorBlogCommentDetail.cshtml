@model IEnumerable<EntityLayer.Concrete.Comment>

@{
    ViewBag.Title = "AuthorBlogCommentDetail";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <!-- Site wrapper -->

    <div class="wrapper">

        <section class="content">

            <div class="container-fluid">



                <!-- Timelime example  -->

                <div class="row">

                    <div class="col-md-12">

                        @foreach (var x in Model)
                        {

                            <!-- The time line -->

                            <div class="timeline">

                                <!-- timeline time label -->

                                <div class="time-label">

                                    <span class="bg-red">@x.CommentTime.ToString("dd-MM-yyyy")</span>

                                </div>

                                <!-- /.timeline-label -->
                                <!-- timeline item -->

                                <div>

                                    <i class="fas fa-comment bg-yellow"></i>

                                    <div class="timeline-item">

                                        <h3 class="timeline-header">@x.UserName</h3>

                                        <div class="timeline-body">
                                            @x.CommentText
                                        </div>

                                        <div class="timeline-footer">

                                            <a href="/User/AuthorBlogCommentDelete/@x.CommentId" class="btn btn-danger btn-sm">Sil</a>

                                        </div>

                                    </div>

                                </div>

                                <!-- END timeline item -->

                            </div>
                        }
                    </div>

                    <!-- /.col -->

                </div>

            </div>

            <!-- /.timeline -->

        </section>

        <!-- /.content -->

    </div>

    <!-- ./wrapper -->

</body>

</html>

