@model EntityLayer.Concrete.Author


<div class="tab-pane" id="settings">


    <form method="post" class="form-horizontal" id="form1">

        <div class="form-group row">

            

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.AuthorId, new { @class = "form-control", @type="hidden" })

            </div>

        </div>


        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Ad - Soyad</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.AuthorName, new { @class = "form-control" })
                @Html.ValidationMessageFor(x=>x.AuthorName)
            </div>

        </div>

        <div class="form-group row">

            <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>

            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.AuthorMail, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.AuthorMail)


            </div>

        </div>

        <div class="form-group row">

            <label for="inputName2" class="col-sm-2 col-form-label">Meslek</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.AuthorTitle, new { @class = "form-control" })


            </div>

        </div>

        <div class="form-group row">

            <label for="inputExperience" class="col-sm-2 col-form-label">Telefon NUmarası</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.AuthorPhoneNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.AuthorPhoneNumber)


            </div>

        </div>

        <div class="form-group row">

            <label for="inputExperience" class="col-sm-2 col-form-label">Profil Resmi</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.AuthorImage, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.AuthorImage)


            </div>

        </div>

        <div class="form-group row">

            <label for="inputExperience" class="col-sm-2 col-form-label">Şifre</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.AuthorPassWord, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.AuthorPassWord)


            </div>

        </div>



        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Hakkında</label>

            <div class="col-sm-10">

                @Html.TextAreaFor(x => x.AuthorAbout, 5, 2, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.AuthorAbout)

            </div>

        </div>



        <div class="form-group row">

            <div class="offset-sm-2 col-sm-10">

                <button type="submit" class="btn btn-danger">Güncelle</button>

            </div>

        </div>

    </form>


</div>


