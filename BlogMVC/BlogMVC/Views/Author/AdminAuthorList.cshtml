@model IEnumerable<EntityLayer.Concrete.Author>

@{
    ViewBag.Title = "AdminAuthorList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <!-- Site wrapper -->

    <div class="wrapper">

        <!-- Navbar -->
        <!-- Main content -->

        <section class="content">

            <!-- Default box -->

            

            <div class="card card-solid">

                <div class="card-body pb-0">

                    <div class="row d-flex align-items-stretch">
                        @foreach (var x in Model)
                        {

                            <div class="col-12 col-sm-12 col-md-4 d-flex align-items-stretch">

                                <div class="card bg-light">
                                    <div class="card-header text-muted border-bottom-0">

                                        @x.AuthorTitle

                                    </div>

                                    <div class="card-body pt-0">

                                        <div class="row">

                                            <div>

                                            </div>
                                            <div class="col-7">

                                                <br />
                                                <h2 class="lead"><b>@x.AuthorName</b></h2>

                                                <p class="text-muted text-sm"><b>Açıklama: </b> @x.AuthorAbout </p>

                                                <ul class="ml-4 mb-0 fa-ul text-muted">

                                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa fa-envelope"></i></span> Mail: @x.AuthorMail</li>

                                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Telefon : @x.AuthorPhoneNumber</li>

                                                </ul>

                                            </div>

                                            <div class="col-5 text-center">

                                                <img src="@x.AuthorImage" alt="" class="img-circle img-fluid" style="height:128px;width:128px">

                                            </div>

                                        </div>

                                    </div>

                                    <div class="card-footer">

                                        <div class="text-right">

                                            <a href="/Author/AdminAuthorPost/@x.AuthorId" class="btn btn-sm bg-teal">

                                                <i class="fas fa-comments"> Yazarın Blogları</i>

                                            </a>

                                            <a href="/Author/AdminAuthorUpdate/@x.AuthorId" class="btn btn-sm btn-primary">

                                                <i class="fas fa-user"></i> Yazar Bilgilerini Güncelle

                                            </a>

                                        </div>

                                    </div>

                                </div>

                            </div>
                        }
                        </div>
                        
                </div>

            </div>

            <a href="/Author/AdminNewAuthorAdd/" class="btn btn-info">Yeni Yazar Ekle</a>
            

            <!-- /.card -->

        </section>

        <!-- /.content -->

    </div>

    <!-- /.control-sidebar -->

</body>

</html>

