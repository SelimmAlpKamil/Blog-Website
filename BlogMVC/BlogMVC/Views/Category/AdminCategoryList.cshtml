@model IEnumerable<EntityLayer.Concrete.Category>
           

@{
    ViewBag.Title = "AdminCategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Kategoriler</h3>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                id

                            </th>

                            <th style="width: 20%">

                                Kategori İsmi

                            </th>

                            

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>

                                <td>

                                    @x.CategoryId

                                </td>

                                <td>

                                    <a>

                                        @x.CategoryName

                                    </a>

                                </td>







                                <td class="project-actions text-right">

                                    <a class="btn btn-primary btn-sm" href="/Blog/BlogByCategory/@x.CategoryId/">

                                        <i class="fas fa-folder">

                                        </i>

                                        Bloglar

                                    </a>

                                    <a class="btn btn-info btn-sm" href="/Category/AdminUpdateCategory/@x.CategoryId">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="/Category/AdminCategoryDelete/@x.CategoryId">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>
                                </td>

                            </tr>
                        }

                    </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>

        <br />
        <div style="margin-left:10px">
            <a href="/Category/AdminAddNewCategory/" class="btn btn-info">Yeni Kategori Ekle</a>
        </div>
        <br />
        


        <!-- /.card -->

    </section>

</body>

</html>

