@using PagedList;
@using PagedList.Mvc

@model IEnumerable<EntityLayer.Concrete.Blog>

@{string color = " ";}


<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12">
                <h2>Recent Posts</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var x in Model)
            {
                if (x.Category.CategoryName == "Yazılım")
                {
                    color = "post-category text-white bg-secondary mb-3";
                }
                if (x.Category.CategoryName == "Kültür & Sanat")
                {
                    color = "post-category text-white bg-info mb-3";
                }
                if (x.Category.CategoryName == "Seyahat")
                {
                    color = "post-category text-white bg-danger mb-3";
                }
                if (x.Category.CategoryName == "Teknoloji")
                {
                    color = "post-category text-white bg-warning mb-3";
                }
                if (x.Category.CategoryName == "Film & Dizi")
                {
                    color = "post-category text-white bg-primary mb-3";
                }





                <div class="col-lg-4 mb-4">
                    <div class="entry2">
                        <a href="/Blog/BlogDetails/@x.BlogId"><img src="@x.BlogImage" alt="Image" class="img-fluid rounded" style="width:350px;height:250px"></a>
                        <div class="excerpt">
                            <span class="@color">@x.Category.CategoryName</span>

                            <h2><a href="/Blog/BlogDetails/@x.BlogId">@x.BlogTitle</a></h2>
                            <div class="post-meta align-items-center text-left clearfix">
                                <figure class="author-figure mb-0 mr-3 float-left"><img src="@x.Author.AuthorImage" alt="Image" class="img-fluid" style="height:50px; width:50px"></figure>
                                <span class="d-inline-block mt-1">By @x.Author.AuthorName</span>
                                <span>&nbsp;-&nbsp; @x.BlogDate.ToString("dd.MM.yyyy")</span>
                            </div>

                            <p>@x.BlogContent.Substring(0, x.BlogContent.Substring(0, 100).LastIndexOf(" "))...</p>
                            <p><a href="/Blog/BlogDetails/@x.BlogId">Read More</a></p>
                        </div>
                    </div>
                </div>

            }



        </div>
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

    </div>
</div>
